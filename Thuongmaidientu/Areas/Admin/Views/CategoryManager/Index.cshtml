@model IEnumerable<Thuongmaidientu.Models.Category>

@{
    ViewData["Title"] = "Index";
}

@section Styles {
    <style>
        th, td {
            text-align: center
        }
    </style>

}
<h3 class="text-center">Category List</h3>
<p>
    <a asp-action="Add" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryId)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                    @(item.Status ? "Đang bán" : "Không bán")
            </td>
            <td>
                <a asp-action="Update" asp-route-id="@item.CategoryId" class="btn btn-secondary">Edit</a> |
                    <a asp-action="Display" asp-route-id="@item.CategoryId" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
